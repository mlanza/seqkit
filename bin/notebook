#!/usr/bin/env pwsh
param(
  [ValidateSet('pages','journals')]
  [string]$Type
)

$paths =
  if ($Type) {
    "$env:NOTES_DIR/$Type"
  } else {
    "$env:NOTES_DIR/pages",
    "$env:NOTES_DIR/journals"
  }

Get-ChildItem $paths -Recurse |
  Where-Object { -not $_.PSIsContainer } |
  ForEach-Object FullName
